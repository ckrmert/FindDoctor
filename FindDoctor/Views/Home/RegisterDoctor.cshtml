@model FindDoctor.Models.Doctors

@{
    ViewBag.Title = "RegisterDoctor";
}



<body>

    <main>
        <div id="hero_register">
            <div class="container margin_120_95">
                <div class="row">
                    <div class="col-lg-6">
                        <h1>Kendini Tanıtma Vakti @ViewBag.DoctorRegisterError</h1>
                        <p class="lead">Kayıt ol ve insanlara kendini tanıt.</p>
                        <div class="box_feat_2">
                            <i class="pe-7s-map-2"></i>
                            <h3>Detaylı Seçenekler</h3>
                            <p>Sitenin gelişmiş özelliklerinden fayda sağla.</p>
                        </div>
                        <div class="box_feat_2">
                            <i class="pe-7s-date"></i>
                            <h3>Basit Randevu Sistemi</h3>
                            <p>Kolay bir şekilde randevularını onayla ve düzenle.</p>
                        </div>
                        <div class="box_feat_2">
                            <i class="pe-7s-phone"></i>
                            <h3>Mobil Desteği</h3>
                            <p>Bilgisayarın yanında değilse Mobil Desteği ile kolayca erişim sağla.</p>
                            @TempData["DoctorRegisterError"]
                        </div>
                    </div>
                    <!-- /col -->
                    <div class="col-lg-5 ml-auto">
                        @using (Html.BeginForm())
                        {
                        <div class="box_form">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "İsminiz", type = "text", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "Mail Adresiniz", type = "email", required = "required" })
                                    </div>
                                </div>
                            </div>
                            <!-- /row -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password", required = "required" })
                                    </div>
                                </div>
                            </div>
                            <!-- /row -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.DropDownListFor(x => x.SpecializationId, (List<SelectListItem>)ViewBag.SpecNames, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.DropDownListFor(x=>x.CityId, (List<SelectListItem>)ViewBag.CityNames, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <!-- /row -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefon Numaranız", type = "text", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.OfficePhone, new { @class = "form-control", placeholder = "Ofis Numaranız", type = "text" , required= "required"})
                                    </div>
                                </div>
                            </div>
                            <!-- /row -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control", placeholder = "Adresiniz", type = "text", required = "required" })
                                    </div>
                                </div>
                            </div>
                            <!-- /row -->
                            <p class="text-center add_top_30"><input type="submit" class="btn_1" value="Submit"></p>
                            <div class="text-center"><small>@ViewBag.DoctorRegisterError</small></div>
                            
                        </div>
                        }
                        <!-- /box_form -->
                    </div>
                    <!-- /col -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /hero_register -->
    </main>
    
</body>
