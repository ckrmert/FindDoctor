@model List<FindDoctor.Models.Favorites>

@{
    ViewBag.Title = "UserFavorites";
}



    <div class="layer"></div>
    <!-- Mobile menu overlay mask -->

    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    <!-- End Preload -->

    

    <main>
        <div id="results">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h4><strong>@Model.Count doktor favorilerinize ekli.</strong></h4>
                    </div>    
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /results -->

      
        

        <div class="container margin_60_35">
            <div class="row">
                <div class="col-lg-8">

                    <div class="row">

                        @foreach (var item in Model)
                        {
                            <div class="col-md-6">
                                <div class="box_list wow fadeIn">
                                    <a href="/Details/NotFavorite/@item.DoctorId" class="wish_bt"></a>
                                    <figure>
                                        <a href="/Details/DoctorPrivate/@item.DoctorId">
                                            <img src="@item.Doctors.ProfileImage" class="img-fluid" alt="">
                                            <div class="preview"><span></span></div>
                                        </a>
                                    </figure>
                                    <div class="wrapper">
                                        <small>@item.Doctors.Specializations.Name</small>
                                        <h3>@item.Doctors.Name</h3>

                                        
                                        <a href="badges.html" data-toggle="tooltip" data-placement="top" data-original-title="Badge Level" class="badge_list_1"><img src="img/badges/badge_1.svg" width="15" height="15" alt=""></a>
                                    </div>
                                    <ul>
                                        <li><a href="#0" onclick="onHtmlClick('Doctors', 0)"><i class="icon_pin_alt"></i>View on map</a></li>
                                        @*<li><a href="https://www.google.com/maps/dir//Assistance+%E2%80%93+H%C3%B4pitaux+De+Paris,+3+Avenue+Victoria,+75004+Paris,+Francia/@48.8606548,2.3348734,14z/data=!4m15!1m6!3m5!1s0x0:0xa6a9af76b1e2d899!2sAssistance+%E2%80%93+H%C3%B4pitaux+De+Paris!8m2!3d48.8568376!4d2.3504305!4m7!1m0!1m5!1m1!1s0x47e67031f8c20147:0xa6a9af76b1e2d899!2m2!1d2.3504327!2d48.8568361" target="_blank"><i class="icon_pin_alt"></i>Directions</a></li>*@
                                        <li><a href="detail-page.html">Book now</a></li>
                                    </ul>
                                </div>
                            </div>
                        }

                        <!-- /box_list -->


                    </div>
                    <!-- /row -->

 </div>
                <!-- /col -->

                <aside class="col-lg-4" id="sidebar">
                    <div id="map_listing" class="normal_list">
                    </div>
                </aside>
                <!-- /aside -->

            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </main>
    <!-- /main -->

 