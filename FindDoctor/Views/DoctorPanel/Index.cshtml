@model FindDoctor.Classes.PanelMain

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}



<body class="fixed-nav sticky-footer" id="page-top">
    
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
           @{ 
              int total = Model.Com1.Count() + Model.Com2.Count();
           }
            <!-- Icon Cards-->
            <div class="row">
                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card dashboard text-white bg-primary o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fa fa-fw fa-envelope-open"></i>
                            </div>
                            <div class="mr-5"><h5>@total yorum</h5></div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="~/DoctorPanel/PanelComments/0">
                            <span class="float-left">Detaylara git</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card dashboard text-white bg-warning o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fa fa-fw fa-star"></i>
                            </div>
                            <div class="mr-5"><h5>@Model.Blogs.Count blog yazısı</h5></div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="~/DoctorPanel/PanelBlog">
                            <span class="float-left">Detaylara git</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card dashboard text-white bg-success o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fa fa-fw fa-calendar-check-o"></i>
                            </div>
                            <div class="mr-5"><h5>@Model.Doctor.Patiens randevu</h5></div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="~/DoctorPanel/PanelAllOrders">
                            <span class="float-left">Detaylara git</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card dashboard text-white bg-danger o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fa fa-fw fa-heart"></i>
                            </div>
                            <div class="mr-5"><h5>@Model.Favorites.Count kullanıcın listesinde</h5></div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="~/DoctorPanel/PanelWhoAreFav/0">
                            <span class="float-left">Detaylara git</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- /cards -->
            <h2></h2>
            <div class="box_general padding_bottom">
                <div class="header_box version_2">
                    <h2><i class="fa fa-bar-chart"></i>Statistic</h2>
                </div>
                <canvas id="myAreaChart" width="100%" height="30" style="margin:45px 0 15px 0;"></canvas>
            </div>

           
        </div>
        <!-- /.container-fluid-->
    </div>
    <!-- /.container-wrapper-->
   
   
 

</body>