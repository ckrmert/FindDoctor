@model FindDoctor.Classes.DoctorProfile

@{
    ViewBag.Title = "DoctorProfile";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<body class="fixed-nav sticky-footer" id="page-top">
    @using (Html.BeginForm("DoctorProfile","DoctorPanel",FormMethod.Post,new { enctype="multipart/form-data"}))
    {
        <div class="content-wrapper">
            <div class="container-fluid">
                <!-- Breadcrumbs-->
                


                <div class="box_general padding_bottom">
                    <div class="header_box version_2">
                        <h2><i class="fa fa-file"></i>Bilgilerim</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>İsim</label>
                                @Html.TextBoxFor(x => x.Doctor.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mobil Telefon</label>
                                @Html.TextBoxFor(x => x.Doctor.Phone, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <!-- /row-->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ofis Numarası</label>
                                @Html.TextBoxFor(x => x.Doctor.OfficePhone, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Doctor.Mail, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <!-- /row-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Fotoğrafım</label><br />
                                <input type="file" name="ProfilImage" />

                            </div>
                        </div>
                    </div>
                    <!-- /row-->
                </div>


                <!-- /box_general-->

                <div class="box_general padding_bottom">
                    <div class="header_box version_2">
                        <h2><i class="fa fa-map-marker"></i>Adres Bilgilerim</h2>
                    </div>

                    <!-- /row-->
                    @Html.TextAreaFor(x => x.Doctor.Adress, new { @class = "form-control" })
                    <!-- /row-->
                </div>
                <!-- /box_general-->

                <div class="box_general padding_bottom">
                    <div class="header_box version_2">
                        <h2><i class="fa fa-file-text"></i>Biyografim</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Biyografi</label>
                                @Html.TextAreaFor(x => x.Doctor.Biography, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <!-- /row-->

                </div>
                <!-- /box_general-->

                <div class="box_general padding_bottom">
                    <div class="header_box version_2">
                        <h2><i class="fa fa-folder"></i>Fiyatlandırmalarım</h2>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @foreach (var item in Model.PriceList)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <h4>@item.ServiceName</h4>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <h4>@item.Price</h4>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <a class="delete" href="#"><i class="fa fa-fw fa-remove"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>


                    <!-- /row-->
                </div>

                <div class="box_general padding_bottom">
                    <div class="header_box version_2">
                        <h2><i class="fa fa-folder"></i>Yeni Fiyatlandırma Ekle</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                        
                            <table id="pricing-list-container" style="width:100%;">
                                <tr class="pricing-list-item">
                                    <td>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                   <input name="txtservice" type="text" class="form-control" placeholder="Title">
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <input name="txtprice" type="text" class="form-control" placeholder="Title">
                                                </div>
                                            </div>

                                        </div>
                                    </td>
                                </tr>
                            </table>
                        
                           
                                              
                             
                          
                            @*<a href="#0" class="btn_1 gray add-pricing-list-item"><i class="fa fa-fw fa-plus-circle"></i>Add Item</a>*@
                        </div>
                    </div>
                    <!-- /row-->
                </div>
                <!-- /box_general-->
                <button type="submit" class="btn_1 medium">DEĞİŞİKLİKLERİ KAYDET</button>

            </div>
            <!-- /.container-fluid-->
        </div>
        <!-- /.container-wrapper-->
        <footer class="sticky-footer">
            <div class="container">
                <div class="text-center">
                    <small>Copyright © FinDoctor 2017</small>
                </div>
            </div>
        </footer>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fa fa-angle-up"></i>
        </a>


    }
</body>

