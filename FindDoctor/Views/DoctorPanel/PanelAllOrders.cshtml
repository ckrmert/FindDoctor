@model List<FindDoctor.Models.Orders>
@{
    ViewBag.Title = "PanelAllOrders";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        
        <div class="box_general">
            <div class="header_box">
                <h2 class="d-inline-block">Geçmiş Randevular</h2>

            </div>




            <div class="list_general">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            <figure><img src="@item.Members.ProfileImage" alt=""></figure>
                            <h4>@item.Members.Name <i class="approved">Tamamlandı</i></h4>
                            <ul class="booking_details">
                                <li><strong>Randevu tarihi:</strong><b> @item.Date</b></li>
                                <li><strong>Randevu saati:</strong><b>@item.Time</b></li>
                                <li><strong>Servis:</strong><b>@item.Prices.ServiceName</b></li>
                                <li><strong>Fiyat:</strong><b>@item.Prices.Price ₺</b></li>

                                <li><strong>Telefon:</strong><b>@item.Members.Phone</b></li>
                                <li><strong>Email:</strong><b> @item.Members.Mail</b></li>
                            </ul>
                          
                        </li>
                    }


                </ul>
            </div>


        </div>
        <!-- /box_general-->

    </div>
    <!-- /container-fluid-->
</div>

